<Page x:Class="OldGoodAvitoApplication.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OldGoodAvitoApplication"
      mc:Ignorable="d" 
      d:DesignHeight="1000" d:DesignWidth="1000"
      Title="Авторизация">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" >
            <TextBlock Text="Авторизация" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>

            <TextBox x:Name="LoginTextBox"  FontSize="16" Height="40"/>
            <PasswordBox x:Name="PasswordBox"  FontSize="16" Height="40"/>

            <Button Content="Авторизоваться" FontSize="16" Height="40" Click="AuthorizeButton_Click"/>

            <TextBlock x:Name="ErrorMessage" Foreground="Red" TextWrapping="Wrap" TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</Page>
